<%= form_tag(@doctor.new_record? ? doctors_path : doctor_path(@doctor), method: @doctor.new_record? ? :post : :put) do %>
  <%= label_tag :name, "Name" %>
  <%= text_field_tag :name, @doctor.name %>
  <%= label_tag :email, "Email" %>
  <%= email_field_tag :email, @doctor.email %>
   <%= label_tag :contact_no, "cn" %>
  <%= text_field_tag :contact_no, @doctor.contact_no %>
  <%= submit_tag @doctor.new_record? ? "Create" : "Update" %>
<% end %>
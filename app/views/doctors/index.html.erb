<%= link_to 'New doctor', new_doctor_path  %>

<style>
  table {
    border-collapse: collapse;
  }
  td, th {
    border: 1px solid black;
  }
  td + td, th + th {
    border-left: none;
  }
</style>
<h1>Listing doctors</h1>
<table>
<tr>
<th>name</th>
<th>email</th>
<th>contact_no</th>
<th>patient_name</th>
<th colspan="3"> </th>
</tr>
 
<% @doctors.each do |doctor| %>
<tr>
<td><%= doctor.name %></td>
<td><%= doctor.email %></td>
<td><%= doctor.contact_no %></td>
<td>
  <ul>
<% doctor.patients.each do |patient| %>
<li> <%= patient.name %></li>
<% end %>
</ul>
</td>
<td><%= link_to 'Show', doctor_path(doctor) %></td>
<td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
<td><%= link_to 'destroy', doctor_path(doctor),
method: :delete, 
data:{confirm: 'are you sure?'}%></td>
</tr>
<% end %>
</table>
<%= form_tag(doctors_path, method: "get") do %>
  <%= label_tag(:patient_id, "Select Patient:") %>
  <%= select_tag(:patient_id, options_for_select(@patients), prompt: "Select") %>
  <%= submit_tag("Submit") %>
<% end %>

